<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    xmlns:custom="http://schemas.android.com/apk/res-auto"
    android:id="@+id/activity_main"
    android:paddingBottom="@dimen/activity_vertical_margin"
    android:paddingLeft="@dimen/activity_horizontal_margin"
    android:paddingRight="@dimen/activity_horizontal_margin"
    android:paddingTop="@dimen/activity_vertical_margin"
    tools:context="com.benedetto.lars.lab4.MainActivity"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:gravity="center"
    android:orientation="vertical">

    <com.benedetto.lars.lab4.SevenSegmentView
        custom:value="0"
        android:layout_height="0dp"
        android:layout_weight="1"
        android:id="@+id/sevenSegmentTop"
        android:layout_width="match_parent" />

    <Button
        android:text="+1"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:gravity="center"
        android:id="@+id/buttonIncrement" />

    <LinearLayout
        android:orientation="horizontal"
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:gravity="center"
        android:layout_weight="1">
        <com.benedetto.lars.lab4.SevenSegmentView
            android:layout_width="0dp"
            custom:value="0"
            android:layout_height="match_parent"
            android:layout_weight="1"
            android:id="@+id/sevenSegmentOne" />
        <com.benedetto.lars.lab4.SevenSegmentView
            android:layout_width="0dp"
            custom:value="0"
            android:layout_height="match_parent"
            android:layout_weight="1"
            android:id="@+id/sevenSegmentTwo" />
        <com.benedetto.lars.lab4.SevenSegmentView
            android:layout_width="0dp"
            custom:value="0"
            android:layout_height="match_parent"
            android:layout_weight="1"
            android:id="@+id/sevenSegmentThree" />

    </LinearLayout>
</LinearLayout>